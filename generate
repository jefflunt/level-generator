#!/usr/bin/env ruby
$LOAD_PATH.unshift 'lib'
require 'room'
require 'merger'

TOKENS = {
  -1 => '.',
  0 => ' ',
  1 => 'X'
}

def format(floor)
  w, h = floor[0..1]
  floor[2..-1].each_slice(w) do |row|
    row.each do |cell|
      print TOKENS[cell]
    end
    puts
  end
end

floor = Generate::Room.rect(4, 6)
floor = Generate::Room.place(:overwrite, floor, Generate::Room.rect(4, 4), -3, -5)
floor = Generate::Room.place(:overwrite, floor, Generate::Room.rect(7, 3), 9, 5)
floor = Generate::Room.place(:merge, floor, Generate::Room.rect(10, 6), 2, 1)
floor = Generate::Room.pad(floor, 1, 2, 3, 4)
format(floor)
